<h1>Create a Song</h1>

<%= form_for @song do |f| %>
<br>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :artist_name %>
<%= f.text_field :artist_name %>
<br>
<%= f.collection_select(:genre_id, Genre.all, :id, :name, {:prompt => 'Please select the genre'})%>
<br>

<%= label_tag(:song_notes_attributes_0_content, "Note 1:") %>
<%= text_field_tag(:song_notes_attributes_0_content) %>
<%= label_tag(:song_notes_attributes_1_content, "Note 2:") %>
<%= text_field_tag(:song_notes_attributes_1_content) %>

<%= f.submit %>
<% end %>